@model Sfa.Tl.ResultsAndCertification.Web.ViewComponents.DashboardBanner.DashboardBannerModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.ViewComponents;

@if (Model != null)
{
    <div class="govuk-notification-banner" role="region" data-module="govuk-notification-banner">
        <div class="govuk-notification-banner__header">
            <h2 class="govuk-notification-banner__title">
                @DashboardBanner.Heading
            </h2>
        </div>
        <div class="govuk-notification-banner__content">
            <b>@Html.Raw($"{Model.Message}")</b>
        </div>
    </div>
}