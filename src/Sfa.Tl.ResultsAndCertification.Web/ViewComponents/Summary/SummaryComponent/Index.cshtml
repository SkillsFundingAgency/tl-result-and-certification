@using Sfa.Tl.ResultsAndCertification.Web.Content.ViewComponents;
@model Sfa.Tl.ResultsAndCertification.Web.ViewComponents.Summary.SummaryComponent.SummaryComponentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
        @Model.Title
    </dt>
    <dd class="govuk-summary-list__value">
        <p class="govuk-body">@Model.Value</p>
    </dd>
    <dd class="govuk-summary-list__actions">
        <a class="govuk-link" asp-route="@Model.RouteName" asp-all-route-data="@Model.RouteAttributes">Change<span class="govuk-visually-hidden">@Model.Title</span></a>
    </dd>
</div>

