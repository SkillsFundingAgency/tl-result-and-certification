@model Sfa.Tl.ResultsAndCertification.Web.ViewComponents.Summary.SummaryItem.SummaryItemModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
        @Model?.Title
    </dt>
    <dd class="govuk-summary-list__value">
        <p class="govuk-body">@Model?.Value</p>
    </dd>
    @if (!string.IsNullOrWhiteSpace(Model?.ActionText))
    {
        <dd class="govuk-summary-list__actions">
            <a class="govuk-link" id="@Model?.Id" asp-route="@Model?.RouteName" asp-all-route-data="@Model?.RouteAttributes">@Model?.ActionText<span class="govuk-visually-hidden">@Model?.Title</span></a>
        </dd>
    }
</div>

