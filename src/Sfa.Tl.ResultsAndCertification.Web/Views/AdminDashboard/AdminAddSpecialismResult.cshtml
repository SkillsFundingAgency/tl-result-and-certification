@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.AdminDashboard.Result.AdminAddSpecialismResultViewModel
@using Sfa.Tl.ResultsAndCertification.Common.Helpers
@using Sfa.Tl.ResultsAndCertification.Web.Content.AdminDashboard

@{
    ViewData["Title"] = AdminAddSpecialismResult.Page_Title;
}

@section NavigationBar {
    <vc:back-link model=Model.BackLink></vc:back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-route="@RouteConstants.SubmitAdminAddSpecialismResult">

            <input type="hidden" asp-for="RegistrationPathwayId" />
            <input type="hidden" asp-for="SpecialismAssessmentId" />
            <input type="hidden" asp-for="CanResultBeAdded" />

            <!-- Add assessment result page header -->
            <div class="record-header">
                <h1 class="govuk-heading-xl">
                    @AdminAddSpecialismResult.Heading_Add_Assessment_Result
                </h1>
            </div>

            <partial name="_ValidationSummary" />

            <!-- Personal details -->
            <input type="hidden" asp-for="Learner" />
            <input type="hidden" asp-for="Uln" />
            <input type="hidden" asp-for="Provider" />
            <input type="hidden" asp-for="Tlevel" />
            <input type="hidden" asp-for="StartYear" />

            <div class="govuk-!-margin-bottom-9">
                <h2 class="govuk-heading-m">
                    @AdminAddSpecialismResult.Heading_Personal_Details
                </h2>

                <dl class="govuk-summary-list">
                    <vc:summary-item model=Model.SummaryLearner></vc:summary-item>
                    <vc:summary-item model=Model.SummaryUln></vc:summary-item>
                    <vc:summary-item model=Model.SummaryProvider></vc:summary-item>
                    <vc:summary-item model=Model.SummaryTlevel></vc:summary-item>
                    <vc:summary-item model=Model.SummaryStartYear></vc:summary-item>
                </dl>
            </div>

            <!-- Core component -->
            <input type="hidden" asp-for="SpecialismName" />
            <input type="hidden" asp-for="ExamPeriod" />
            <input type="hidden" asp-for="Grade" />

            <div class="govuk-!-margin-bottom-9">
                <h2 class="govuk-heading-m">
                    @string.Format(AdminAddSpecialismResult.Specialism_Heading_Text, Model.SpecialismName)
                </h2>
                <dl class="govuk-summary-list">
                    <vc:summary-item model=Model.SummaryExamPeriod></vc:summary-item>
                    <vc:summary-item model=Model.SummaryGrade></vc:summary-item>
                </dl>
            </div>

            @if (Model.CanResultBeAdded)
            {
                <!-- Select the grade -->
                <div class="govuk-form-group govuk-!-margin-top-2" sfa-validation-for="SelectedGradeCode" sfa-validation-class="govuk-form-group--error">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                            <h2 class="govuk-fieldset__heading">
                                @AdminAddSpecialismResult.Heading_Select_Grade
                            </h2>
                        </legend>

                        <span sfa-validation-for="SelectedGradeCode"></span>
                        @foreach (var grade in Model?.Grades?.Select((value, i) => (value, i)))
                        {
                            var elementId = (grade.i > 0) ? "selectedgradecode-" + grade.i : "selectedgradecode";
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="@elementId" type="radio" asp-for="@Model.SelectedGradeCode" value="@Model.Grades[grade.i].Code">
                                <label class="govuk-label govuk-radios__label" for="@elementId">
                                    @grade.value.Value
                                </label>
                            </div>
                        }
                    </fieldset>
                </div>

                <!-- Continue / Cancel buttons -->
                <div class="govuk-button-group">
                    <button id="btnContinue" class="govuk-button" data-module="govuk-button" data-prevent-double-click="true">@AdminAddSpecialismResult.Button_Continue</button>
                    <a id="btnCancel" class="govuk-button govuk-button--secondary" data-module="govuk-button" data-prevent-double-click="true" asp-route="@RouteConstants.AdminLearnerRecord" asp-route-pathwayid="@Model.RegistrationPathwayId">@AdminAddSpecialismResult.Button_Cancel</a>
                </div>
            }
            else
            {
                <!-- You cannot remove an assessment entry for this learner -->
                @* <div class="govuk-form-group">
            <h2 class="govuk-heading-m">@AdminAddSpecialismResult.Warning_Header_You_Cannot_Remove_An_Assessment_Entry_For_This_Learner</h2>
            <p class="govuk-body">@AdminAddSpecialismResult.Warning_Body_This_Is_Because_The_Learner_Already_Has_Result</p>

            <div class="govuk-button-group">
            <a id="btnReturnToLearnerRecord" class="govuk-button" data-module="govuk-button" data-prevent-double-click="true" asp-route="@RouteConstants.AdminLearnerRecord" asp-route-pathwayid="@Model.RegistrationPathwayId">@AdminAddSpecialismResult.Button_Return_To_Learner_Record</a>
            </div>
            </div>*@
            }
        </form>
    </div>
</div>