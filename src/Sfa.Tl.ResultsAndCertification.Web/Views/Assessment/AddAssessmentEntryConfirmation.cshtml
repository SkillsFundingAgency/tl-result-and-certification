@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Assessment.Manual.AddAssessmentEntryConfirmationViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.Assessment

@{
    ViewData["Title"] = AddAssessmentEntryConfirmation.Page_Title;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                @AddAssessmentEntryConfirmation.Page_Heading
            </h1>
            <div class="govuk-panel__body">
                @string.Format(AddAssessmentEntryConfirmation.Uln_Text, Model.UniqueLearnerReference)
            </div>
        </div>
        <p class="govuk-!-margin-top-8">
            <a class="govuk-button" role="button" id="backButton" asp-route="AssessmentDetails", asp-route-profileId="@Model.ProfileId">
                @AddAssessmentEntryConfirmation.Back_Button_Text
            </a>
        </p>
    </div>
</div>