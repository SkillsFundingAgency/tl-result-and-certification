@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Assessment.DashboardViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.Assessment

@{
    ViewData["Title"] = @Dashboard.Page_Title;
}

@section NavigationBar {
    <vc:breadcrumb model=@Model.Breadcrumb></vc:breadcrumb>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="govuk-form-group">
            <h1 class="govuk-heading-xl">
                @Dashboard.Page_Heading
            </h1>
        </div>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
        <div class="govuk-form-group assessment-card">
            <h2 class="govuk-heading-m govuk-!-padding-top-3">
                @Dashboard.Card_Heading_Upload_Assessment_File
            </h2>

            <p class="govuk-body">
                <a class="govuk-link" asp-route="">
                    @Dashboard.Card_Link_Upload_Assessment_File
                </a>
            </p>
        </div>
    </div>

    <div class="govuk-grid-column-one-half">
        <div class="govuk-form-group assessment-card">
            <h2 class="govuk-heading-m govuk-!-padding-top-3">
                @Dashboard.Card_Heading_Search_Assessment
            </h2>
            <p class="govuk-body">
                <a class="govuk-link" asp-route="">
                    @Dashboard.Card_Link_Search_Assessment
                </a>
            </p>
        </div>
    </div>    
</div>
