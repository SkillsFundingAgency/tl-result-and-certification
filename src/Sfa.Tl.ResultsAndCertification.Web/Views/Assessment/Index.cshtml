@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Assessment.DashboardViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.Assessment
@using Sfa.Tl.ResultsAndCertification.Common.Helpers

@{
    ViewData["Title"] = @Dashboard.Page_Title;
}

@section NavigationBar {
    <vc:breadcrumb model=@Model.Breadcrumb></vc:breadcrumb>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="govuk-form-group">
            <h1 class="govuk-heading-l">
                @Dashboard.Page_Heading
            </h1>
            <p class="govuk-body">@Dashboard.Para_Tell_Us_When_Your_Learners_Will_Be_Assessed</p>
        </div>
    </div>
</div>

<section class="homepage-section homepage-section--services-and-info">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h2 class="gem-c-heading govuk-heading-m govuk-!-margin-bottom-6">@Dashboard.In_This_Section</h2>
            <ul class="single-column-services-and-info__list">
                <li class="chevron-card">
                    <div class="chevron-card__wrapper">
                        <h3 class="gem-c-heading govuk-heading-s govuk-!-margin-bottom-2">
                            <a class="govuk-link chevron-card__link" asp-route="@RouteConstants.UploadAssessmentsFile">@Dashboard.Card_Heading_Link_Upload_Assessments</a>
                        </h3>
                        <p class="govuk-body chevron-card__description">@Dashboard.Para_Add_Or_Change_Assessment_Periods</p>
                    </div>
                </li>
                <li class="chevron-card">
                    <div class="chevron-card__wrapper">
                        <h3 class="gem-c-heading govuk-heading-s govuk-!-margin-bottom-2">
                            <a class="govuk-link chevron-card__link" asp-route="@RouteConstants.SearchAssessments">@Dashboard.Card_Heading_Link_Manage_Assessments</a>
                        </h3>
                        <p class="govuk-body chevron-card__description">@Dashboard.Para_Add_View_Change_Assessment_Periods</p>
                    </div>
                </li>
                <li class="chevron-card">
                    <div class="chevron-card__wrapper">
                        <h3 class="gem-c-heading govuk-heading-s govuk-!-margin-bottom-2">
                            <a class="govuk-link chevron-card__link" asp-route="@RouteConstants.AssessmentsGeneratingDownload">@Dashboard.Card_Heading_Link_Download_Assessments_Data</a>
                        </h3>
                        <p class="govuk-body chevron-card__description">@Dashboard.Para_Download_Your_Data_As_Csv_File</p>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</section>