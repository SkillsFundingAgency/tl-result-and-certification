@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Assessment.Manual.UlnAssessmentsNotFoundViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.Assessment

@{
    ViewData["Title"] = @SearchAssessmentsNotFound.Page_Title;
}

@section NavigationBar {
    <vc:back-link model=Model.BackLink></vc:back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-form-group">
            <h1 class="govuk-label-wrapper">
                <label class="govuk-label govuk-label--l govuk-!-margin-bottom-6">
                    @string.Format(@SearchAssessmentsNotFound.Uln_Cannot_Be_Found_Text, @Model.Uln)
                </label>
            </h1>
            <p class="govuk-body">@SearchAssessmentsNotFound.If_you_Think_That_The_Uln_Should_Exists_Text</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>@SearchAssessmentsNotFound.Is_Registered_With_Another_Ao_Text</li>
                <li>@SearchAssessmentsNotFound.Has_Never_Been_Registered_With_Us_Text</li>
            </ul>
        </div>

        <div class="govuk-button-group govuk-!-margin-top-6">
            <a id="searchAgainButton" class="govuk-button" role="button" asp-route="SearchAssessments">@SearchAssessmentsNotFound.Button_Search_Again</a>
            <a id="backToHomeButton" class="govuk-button govuk-button--secondary" role="button" data-module="govuk-button" asp-route="Home">@SearchAssessmentsNotFound.Button_Back_To_Home</a>
        </div>
    </div>
</div>