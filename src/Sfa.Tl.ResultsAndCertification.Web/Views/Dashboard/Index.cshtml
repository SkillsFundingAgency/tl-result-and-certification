@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Dashboard.DashboardViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content

@{
    ViewData["Title"] = Dashboard.Page_Title;
}

<!-- MAIN HEADING -->
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="govuk-form-group">
            <h1 class="govuk-heading-l">
                @Dashboard.Section_Heading_Text
            </h1>
        </div>
        @if (Model?.IsTrainingProviderUser == true)
        {
            <p class="govuk-body">
                @Dashboard.Providers_Schools_And_Colleges_Text
            </p>
            <p class="govuk-body">
                @Dashboard.Exams_Board_Text
            </p>
        }
    </div>
</div>

<!-- MAIN ROW -->
<div class="govuk-grid-row">

    @if (Model?.IsAoUser == true)
    {
        <!-- BLOCK 1 – T Levels -->
        <div class="govuk-grid-column-one-half">
            <div class="govuk-form-group card">
                <p class="govuk-body">
                    <h2 class="govuk-heading-m">
                        <a class="govuk-link" asp-route="Tlevels">
                            @Dashboard.Tlevels_Text
                        </a>
                    </h2>
                </p>

                <p class="govuk-body">
                    @Dashboard.Tlevels_Description_Text
                </p>
            </div>
        </div>

        <!-- BLOCK 2 – Providers -->
        <div class="govuk-grid-column-one-half">
            <div class="govuk-form-group card">
                <p class="govuk-body">
                    <h2 class="govuk-heading-m">
                        <a class="govuk-link" asp-route="FindProvider">
                            @Dashboard.Providers_Text
                        </a>
                    </h2>
                </p>

                <p class="govuk-body">
                    @Dashboard.Providers_Description_Text
                </p>
            </div>
        </div>

        <!-- BLOCK 3 – Registrations -->
        <div class="govuk-grid-column-one-half">
            <div class="govuk-form-group card">
                <p class="govuk-body">
                    <h2 class="govuk-heading-m">
                        <a class="govuk-link" asp-route="RegistrationDashboard">
                            @Dashboard.Registrations_Text
                        </a>
                    </h2>
                </p>

                <p class="govuk-body">
                    @Dashboard.Registrations_Description_Text
                </p>
            </div>
        </div>

        <!-- BLOCK 4 – Assessment Entries -->
        <div class="govuk-grid-column-one-half">
            <div class="govuk-form-group card">
                <p class="govuk-body">
                    <h2 class="govuk-heading-m">
                        <a class="govuk-link" asp-route="AssessmentDashboard">
                            @Dashboard.Assessment_Entries_Text
                        </a>
                    </h2>
                </p>

                <p class="govuk-body">
                    @Dashboard.Assessment_Entries_Description_Text
                </p>
            </div>
        </div>

        <!-- BLOCK 5 – Results -->
        <div class="govuk-grid-column-one-half">
            <div class="govuk-form-group card">
                <p class="govuk-body">
                    <h2 class="govuk-heading-m">
                        <a class="govuk-link" asp-route="ResultsDashboard">
                            @Dashboard.Results_Text
                        </a>
                    </h2>
                </p>

                <p class="govuk-body">
                    @Dashboard.Results_Description_Text
                </p>
            </div>
        </div>

        <!-- BLOCK 6 – Reviews and appeals -->
        <div class="govuk-grid-column-one-half">
            <div class="govuk-form-group card">
                <p class="govuk-body">
                    <h2 class="govuk-heading-m">
                        <a class="govuk-link" asp-route="">
                            @Dashboard.Reviews_And_Appeals_Text
                        </a>
                    </h2>
                </p>

                <p class="govuk-body">
                    @Dashboard.Reviews_And_Appeals_Description_Text
                </p>
            </div>
        </div>

        <!-- BLOCK 6 Account -->
        <div class="govuk-grid-column-one-half">
            <div class="govuk-form-group card">
                <p class="govuk-body">
                    <h2 class="govuk-heading-m">
                        <a class="govuk-link" asp-route="AccountProfile">
                            @Dashboard.Account_Text
                        </a>
                    </h2>
                </p>

                <p class="govuk-body">
                    @Dashboard.Account_Description_Text
                </p>
            </div>
        </div>
    }

    @if (Model?.IsTrainingProviderUser == true)
    {
        <!-- Providers Dashboard -->
        <!-- BLOCK: Manage Learning Records -->
        <div class="govuk-grid-column-one-half">
            <div class="govuk-form-group training-provider-card">
                <p class="govuk-body">
                    <h2 class="govuk-heading-m">
                        <a class="govuk-link" asp-route="ManageLearnerRecordsDashboard">
                            @Dashboard.Manage_Learner_TLevel_Records_Text
                        </a>
                    </h2>
                </p>

                <p class="govuk-body">
                    @Dashboard.Manage_Learner_TLevel_Records_Description_Text
                </p>
            </div>
        </div>

        <!-- BLOCK: Request statement of achievement -->
        <div class="govuk-grid-column-one-half">
            <div class="govuk-form-group training-provider-card">
                <p class="govuk-body">
                    <h2 class="govuk-heading-m">
                        <a class="govuk-link" asp-route="RequestStatementOfAchievement">
                            @Dashboard.Providers_Request_Statement_Of_Achievement_Heading
                        </a>
                    </h2>
                </p>
                <p class="govuk-body">
                    @Dashboard.Providers_Request_Statement_Of_Achievement_Text
                </p>
            </div>
        </div>

        <!-- BLOCK: Manage Postal Address -->
        <div class="govuk-grid-column-one-half">
            <div class="govuk-form-group training-provider-card">
                <p class="govuk-body">
                    <h2 class="govuk-heading-m">
                        <a class="govuk-link" asp-route="ManagePostalAddress">
                            @Dashboard.Providers_Manage_Postal_Address_Heading
                        </a>
                    </h2>
                </p>
                <p class="govuk-body">
                    @Dashboard.Providers_Manage_Postal_Address_Text
                </p>
            </div>
        </div>

        <!-- BLOCK: Manage Your Account -->
        <div class="govuk-grid-column-one-half">
            <div class="govuk-form-group training-provider-card">
                <p class="govuk-body">
                    <h2 class="govuk-heading-m">
                        <a class="govuk-link" asp-route="AccountProfile">
                            @Dashboard.Manage_Your_Account_Text
                        </a>
                    </h2>
                </p>

                <p class="govuk-body">
                    @Dashboard.Manage_Your_Account_Description_Text
                </p>
            </div>
        </div>
    }
</div>