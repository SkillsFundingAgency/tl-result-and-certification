@using Sfa.Tl.ResultsAndCertification.Web.Content.Document
@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Document.RegistrationDataFormatAndRulesGuideViewModel

@{
    ViewData["Title"] = @RegistrationDataFormatAndRulesGuide.Page_Title;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">@RegistrationDataFormatAndRulesGuide.Section_Heading</h1>

        <p class="govuk-body">@RegistrationDataFormatAndRulesGuide.Section_Info_Text</p>
        <ul class="govuk-list govuk-list--bullet govuk-!-padding-bottom-5">
            <li>@RegistrationDataFormatAndRulesGuide.Add_And_Edit_Registrations_Text</li>
            <li>@RegistrationDataFormatAndRulesGuide.Meet_The_Technical_Requirements_Text</li>
            <li>@RegistrationDataFormatAndRulesGuide.Use_The_Correct_Format_For_File_Data_Items_Text</li>
            <li>@RegistrationDataFormatAndRulesGuide.Find_UniqueLearnerNumbers_And_UK_Provider_Reference_Numbers_Text</li>
            <li>@RegistrationDataFormatAndRulesGuide.Choose_The_Right_Core_And_Specialism_Codes_Text</li>
            <li>@RegistrationDataFormatAndRulesGuide.Present_Your_Data_Correctly_By_Viewing_An_Example_CSV_File_Text</li>
        </ul>

        <section>
            <div class="gem-c-attachment__thumbnail">
                <a class="govuk-link" target="_self" tabindex="-1" aria-hidden="true" asp-route="DownloadRegistrationDataFormatAndRulesGuide">
                    <svg class="gem-c-attachment__thumbnail-image" version="1.1" viewBox="0 0 99 140" width="99" height="140" aria-hidden="true">
                        <path d="M12 12h75v27H12zM12 59h9v9h-9zM12 77h9v9h-9zM12 95h9v9h-9zM12 113h9v9h-9zM30 59h57v9H30zM30 77h39v9H30zM30 95h57v9H30zM30 113h48v9H30z" stroke-width="0"></path>
                    </svg>
                </a>
            </div>
            <h2 class="govuk-!-font-size-27 govuk-!-font-weight-regular">
                <a class="govuk-link" target="_self" asp-route="DownloadRegistrationDataFormatAndRulesGuide">@RegistrationDataFormatAndRulesGuide.Download_Registration_DataFormat_And_Rules_Guide_Text</a>
            </h2>
            <p class="govuk-body-s">@Model.FileType, @Model.FileSize@RegistrationDataFormatAndRulesGuide.File_Size_Kb_Text, @Model.Version, @Model.PublishedDate</p>
        </section>
    </div>
</div>