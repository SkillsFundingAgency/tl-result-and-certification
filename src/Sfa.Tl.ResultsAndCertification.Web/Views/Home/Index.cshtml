@using Sfa.Tl.ResultsAndCertification.Web.Content.Home

@{
    ViewData["Title"] = @StartPage.Page_Title;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
            @StartPage.Page_Heading
        </h1>
        
        @Html.Raw(@StartPage.Section_Text)

        <a href="@Url.Action("SignIn", "Account")" role="button" draggable="false" class="govuk-button govuk-button--start govuk-!-margin-top-6" data-module="govuk-button">
            @StartPage.Start_Button_Text
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" role="presentation" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
            </svg>
        </a>

    </div>
</div>