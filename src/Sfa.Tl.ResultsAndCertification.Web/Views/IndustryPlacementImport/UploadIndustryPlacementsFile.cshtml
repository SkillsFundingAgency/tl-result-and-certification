@using Sfa.Tl.ResultsAndCertification.Web.Content.IndustryPlacement
@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.IndustryPlacement.UploadIndustryPlacementsRequestViewModel
@addTagHelper *, NWebsec.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = @Upload.Page_Title;
}

@section NavigationBar {
    <vc:breadcrumb model=@Model.Breadcrumb></vc:breadcrumb>
}

@section Scripts {
    <script nws-csp-add-nonce="true" src="~/javascripts/industry-placement-upload.min.js"></script>
}

<div id="uploadIndustryPlacementsContainer">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="govuk-form-group">
                <partial name="_ValidationSummary" />
                <h1 class="govuk-heading-l">@Upload.Page_Heading</h1>
            </div>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <p class="govuk-body">@Upload.Upload_Csv_File_To_Add_Or_Change_The_Industry_Placement_Text</p>

            <form id="uploadIndustryPlacementsForm" class="form" asp-route="SubmitUploadIndustryPlacementssFile" enctype="multipart/form-data">
                <div class="govuk-form-group" sfa-validation-for="File" sfa-validation-class="govuk-form-group--error">
                    <label for="file" class="govuk-label govuk-!-font-size-19 govuk-!-padding-top-5 govuk-!-font-weight-bold">
                        @Upload.Upload_File_Text
                    </label>
                    <span sfa-validation-for="File"></span>
                    <input class="govuk-file-upload" id="file" asp-for="File" type="file" accept=".csv" aria-required="true">
                </div>
                <button id="uploadIndustryPlacementsButton" class="govuk-button tl-show-on-js-only" data-module="govuk-button" type="submit" data-prevent-double-click="true">@Upload.Upload_File_Button_Text</button>
                <partial name="~/Views/IndustryPlacementImport/Partials/_uploadIndustryPlacementNoScriptSubmit.cshtml" />
            </form>
            <h2 class="govuk-heading-m">@Upload.Heading_Before_You_Start</h2>
            <p class="govuk-body">@Upload.Para_You_Can_Download_A_Template_For_Guidance</p>

            <section class="gem-c-attachment">
                <div class="gem-c-attachment__thumbnail">
                    <a class="govuk-link" target="_self" tabindex="-1" aria-hidden="true" asp-route="DownloadLearnerDataFormatAndRulesGuide">
                        <svg class="gem-c-attachment__thumbnail-image" version="1.1" viewBox="0 0 99 140" width="99" height="140" aria-hidden="true">
                            <path d="M12 12h75v27H12zM12 59h9v9h-9zM12 77h9v9h-9zM12 95h9v9h-9zM12 113h9v9h-9zM30 59h57v9H30zM30 77h39v9H30zM30 95h57v9H30zM30 113h48v9H30z" stroke-width="0"></path>
                        </svg>
                    </a>
                </div>
                <h3 class="govuk-heading-s">
                    <a class="govuk-link" target="_self" asp-route="DownloadLearnerDataFormatAndRulesGuide">
                        @string.Format(@Upload.Link_Learner_Data_Format_Rules, @Upload.File_Type, @Upload.File_Size_Kb_Text)
                    </a>
                </h3>
                <p class="govuk-body-s">@Upload.Learner_Document_Version, @Upload.Learner_Document_Published_On</p>
            </section>
        </div>
    </div>
</div>
<partial name="~/Views/IndustryPlacementImport/Partials/_uploadIndustryPlacementProgress.cshtml" />