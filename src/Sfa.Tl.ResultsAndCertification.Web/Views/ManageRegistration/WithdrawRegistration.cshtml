@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Registration.Manual.WithdrawRegistrationViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.Registration

@{
    ViewData["Title"] = @WithdrawRegistration.Page_Title_Text;
}

@section NavigationBar
{
    <vc:back-link model=Model.BackLink></vc:back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-route="SubmitWithdrawRegistration">
            <input type="hidden" asp-for="ProfileId" value="@Model.ProfileId" />
            <input type="hidden" asp-for="WithdrawBackLinkOptionId" value="@Model.WithdrawBackLinkOptionId" />
            <partial name="_ValidationSummary" />
            <div class="govuk-form-group govuk-!-margin-bottom-7">
                <fieldset class="govuk-fieldset" aria-describedby="withdraw-uln-hint">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
                        <h1 class="govuk-fieldset__heading">
                            @WithdrawRegistration.Page_Heading
                        </h1>
                    </legend>
                    <span id="withdraw-uln-hint" class="govuk-hint govuk-!-margin-bottom-7">
                        <strong>@WithdrawRegistration.Uln_Hint_Text</strong> @Model.Uln
                    </span>
                    <div class="govuk-radios" sfa-validation-for="CanWithdraw" sfa-validation-class="govuk-form-group--error">
                        <span sfa-validation-for="CanWithdraw"></span>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="canwithdraw" asp-for="CanWithdraw" type="radio" value="true">
                            <label class="govuk-label govuk-radios__label" for="canwithdraw">
                                @WithdrawRegistration.Section_Yes_Withdraw_Registration_Text
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="tl-can-withdraw-no" asp-for="CanWithdraw" type="radio" value="false">
                            <label class="govuk-label govuk-radios__label" for="tl-can-withdraw-no">
                                @WithdrawRegistration.Section_No_Withdraw_Registration_Text
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <button id="submitButton" class="govuk-button" data-module="govuk-button">@WithdrawRegistration.Submit_Button_Text</button>
        </form>
    </div>
</div>