@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Provider.FindProviderViewModel

@{
    ViewData["Title"] = "Find a provider";
}

@section Scripts {
    <script src="~/javascripts/provider-search.min.js"></script>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_ValidationSummary" />
        <form class="form" id="FindProviderForm" asp-route="FindProvider">
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl ">
                        <h1 class="govuk-fieldset__heading govuk-!-margin-bottom-5">
                            Find a provider
                        </h1>
                    </legend>
                    <p class="govuk-body">Tell us which T Levels a provider will offer.</p>
                    <div class="govuk-form-group" sfa-validation-for="Search" sfa-validation-class="govuk-form-group--error">
                        <label class="govuk-label" for="search">
                            Enter the provider's name
                        </label>
                        <span sfa-validation-for="Search"></span>
                        <input class="govuk-input" id="search" type="text" autocomplete="center-name" asp-for="Search">
                    </div>

                    @*TODO: Following need to be fixed to work.*@
                    <p class="govuk-body">Following is the type a head UI control.</p>
                    <div class="govuk-form-group">
                        <label for="search-autocomplete"></label>
                        <div id="search-autocomplete-container"></div>
                    </div>

                </fieldset>
            </div>

            <button type="submit" class="govuk-button" data-module="govuk-button">Continue</button>
        </form>
    </div>
</div>