@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Provider.ProviderTlevelDetailsViewModel

@{
    ViewData["Title"] = "T Level removed confirmation";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">T Level removed successfully</h1>
            <div class="govuk-panel__body">
                @Model.TlevelTitle
            </div>
        </div>

        <p class="govuk-body govuk-!-padding-bottom-1">You have removed this T Level from @Model.DisplayName (<abbr>UKPRN</abbr>: @Model.Ukprn).</p>

        <p class="govuk-body govuk-!-padding-bottom-7">
            <a class="govuk-link" asp-route="ProviderTlevels" asp-route-providerId="@Model.TlProviderId" asp-route-navigation="true">Manage provider's T Levels</a>
        </p>

        <p>
            @if (Model.ShowBackToProvidersLink)
            {
                <a asp-route="YourProviders" class="govuk-button" role="button">Back to your providers</a>
            }
            else
            {
                <a asp-route="FindProvider" class="govuk-button" role="button">Find another provider</a>
            }
        </p>
    </div>
</div>