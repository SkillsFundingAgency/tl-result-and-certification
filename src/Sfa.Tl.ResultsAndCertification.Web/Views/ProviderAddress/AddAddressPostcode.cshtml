@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.ProviderAddress.AddAddressPostcodeViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.ProviderAddress

@{
    ViewData["Title"] = AddAddressPostcode.Page_Title;
}

@section NavigationBar {
    <vc:back-link model=Model.BackLink></vc:back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
        <partial name="_ValidationSummary" />
        <form asp-route="SubmitAddAddressPostcode">
            <input type="hidden" asp-for="@Model.IsFromAddressMissing"/>
            <div class="govuk-form-group">
                <span class="govuk-caption-xl">@AddAddressPostcode.Caption_Add_Address</span>
                <div class="govuk-form-group" sfa-validation-for="Postcode" sfa-validation-class="govuk-form-group--error">                     
                        <div class="govuk-form-group">
                        <h1 class="govuk-heading-xl">
                            @AddAddressPostcode.Heading_What_Is_Your_Address
                        </h1>
                            <label for="postcode">
                                <h2 class="govuk-body-l govuk-!-font-weight-bold govuk-!-margin-top-3 govuk-!-margin-bottom-3">@AddAddressPostcode.Label_Enter_Postcode</h2>
                            </label>
                            <span sfa-validation-for="Postcode"></span>
                            <input class="govuk-input govuk-input--width-10" id="postcode" asp-for="Postcode" maxlength="8" aria-required="true"/>
                        </div>
                   
                </div>
            </div>
            <button id="findAddressButton" type="submit" class="govuk-button" data-module="govuk-button" data-prevent-double-click="true">@AddAddressPostcode.Button_Find_Address</button>
        </form>

        <p class="govuk-body"><a class="govuk-link" asp-route="AddAddressManually" asp-route-isFromSelectAddress="false" asp-route-isFromAddressMissing="@Model.IsFromAddressMissing">@AddAddressPostcode.Link_Add_Address_Manually</a></p>
    </div>
</div>