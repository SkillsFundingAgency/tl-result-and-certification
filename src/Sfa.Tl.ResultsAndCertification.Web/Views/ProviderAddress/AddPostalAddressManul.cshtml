@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.ProviderAddress.AddPostalAddressManualViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.ProviderAddress

@{
    ViewData["Title"] = AddPostalAddressManual.Page_Title;
}

@section NavigationBar {
    <vc:back-link model=Model.BackLink></vc:back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
        <form action="add-address-manually" method="post" class="form">
            <div class="govuk-form-group govuk-!-margin-bottom-7">
                <span class="govuk-caption-xl">Add address</span>
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-fieldset__heading">
                            @AddPostalAddressManual.Heading_What_Is_Your_Address
                        </h1>
                    </legend>
                    <p class="govuk-body-m">This must be a business address.</p>
                    <div class="govuk-form-group">
                        <label class="govuk-label " for="dept-name">
                            @AddPostalAddressManual.Label_Department
                        </label>
                        <input class="govuk-input  govuk-!-width-two-thirds" asp-for="Department" type="text">
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="AddressLine1">
                            @AddPostalAddressManual.Label_Building_And_Street<span class="govuk-visually-hidden">@AddPostalAddressManual.HiddenText_Line1_Of_2</span>
                        </label>
                        <input class="govuk-input" asp-for="AddressLine1" type="text" autocomplete="on">
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="AddressLine2">
                            <span class="govuk-visually-hidden">@AddPostalAddressManual.HiddenText_Line2_Of_2</span>
                        </label>
                        <input class="govuk-input" asp-for="AddressLine2" type="text" autocomplete="on">
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="Town">
                            @AddPostalAddressManual.Label_Town_Or_City
                        </label>
                        <input class="govuk-input govuk-!-width-two-thirds" asp-for="Town" type="text" autocomplete="on">
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="Postcode">
                            @AddPostalAddressManual.Label_Postcode
                        </label>
                        <input class="govuk-input govuk-input--width-10" asp-for="Postcode" type="text" autocomplete="on" maxlength="8">
                    </div>
                </fieldset>
            </div>
            <button class="govuk-button" role="button">@AddPostalAddressManual.Button_Continue</button>
        </form>
    </div>
</div>