@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.ProviderRegistrations.DownloadRegistrationsDataForViewModel
@using Sfa.Tl.ResultsAndCertification.Common.Helpers
@using Sfa.Tl.ResultsAndCertification.Web.Content.ProviderRegistrations
@using Sfa.Tl.ResultsAndCertification.Web.ViewModel.ProviderRegistrations

@{
    ViewData["Title"] = Model.PageTitle;
}

@section NavigationBar {
    <vc:breadcrumb model=@Model.Breadcrumb></vc:breadcrumb>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-form-group">
            <h1 class="govuk-heading-l">
                @Model.PageHeader
            </h1>
            <p class="govuk-body">@DownloadRegistrationsDataFor.You_Can_Download_A_Full_List_Of_Registered_Learners</p>

            <section class="govuk-clearfix">
                <div class="gem-c-attachment__thumbnail">
                    <a class="govuk-link" target="_self" tabindex="-1" aria-hidden="true" asp-route="@RouteConstants.DownloadRegistrationsDataForLink" asp-route-id="@Model.DownloadLink.BlobUniqueReference">
                        <svg class="attachment__thumbnail-image thumbnail-image-large" version="1.1" viewBox="0 0 99 140" width="99" height="140" aria-hidden="true">
                            <path d="M12 12h75v27H12zm0 47h18.75v63H12zm55 2v59H51V61h16m2-2H49v63h20V59z" stroke-width="0"></path>
                            <path d="M49 61.05V120H32.8V61.05H49m2-2H30.75v63H51V59zm34 2V120H69.05V61.05H85m2-2H67v63h20V59z" stroke-width="0"></path>
                            <path d="M30 68.5h56.5M30 77.34h56.5M30 112.7h56.5M30 95.02h56.5M30 86.18h56.5M30 103.86h56.5" fill="none" stroke-miterlimit="10" stroke-width="2"></path>
                        </svg>
                    </a>
                </div>
                <div class="attachment__details">
                    <h2 class="govuk-heading-m">
                        <a class="govuk-link" target="_self" asp-route="@RouteConstants.DownloadRegistrationsDataForLink" asp-route-id="@Model.DownloadLink.BlobUniqueReference">
                            @Model.DownloadLinkText (@Model.DownloadLink.FileType, @Model.DownloadLink.FileSize <abbr title="Kilobyte">@DownloadRegistrationsDataFor.File_Size_Units</abbr>)
                        </a>
                    </h2>
                </div>
            </section>
        </div>
    </div>
</div>