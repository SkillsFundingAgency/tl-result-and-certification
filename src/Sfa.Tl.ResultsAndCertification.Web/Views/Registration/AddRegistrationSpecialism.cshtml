@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Registration.Manual.SelectSpecialismViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.Registration

@{
    ViewData["Title"] = @SelectSpecialism.Page_Title_Add_Registration_Select_Specialism;
}

@section NavigationBar {
    <vc:back-link model=Model.BackLink></vc:back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form class="form" asp-route="SubmitRegistrationSpecialism">
            <partial name="_ValidationSummary" />
            <input type="hidden" asp-for="IsChangeMode" value="@Model.IsChangeMode.ToString()" />
            <input type="hidden" asp-for="IsChangeModeFromSpecialismQuestion" value="@Model.IsChangeModeFromSpecialismQuestion.ToString()" />
            <div class="govuk-form-group">
                <span class="govuk-caption-xl">@SelectSpecialism.Page_Caption_Text</span>
                <vc:select-specialism model=Model></vc:select-specialism>
            </div>
            <p>
                @{ var buttonText = Model.IsChangeMode ? @SelectSpecialism.Change_Button_Text : @SelectSpecialism.Continue_Button_Text; }
                <button type="submit" class="govuk-button" data-module="govuk-button">@buttonText</button>
            </p>
        </form>
    </div>
</div>