@using Sfa.Tl.ResultsAndCertification.Web.Content.Registration

@{
    ViewData["Title"] = @Confirmation.Page_Title;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">@Confirmation.Section_Heading</h1>
        </div>
        <p class="govuk-body govuk-!-padding-top-3">@Confirmation.Section_Info_Text</p>
        <p class="govuk-!-margin-top-8"><a asp-route="RegistrationDashboard" class="govuk-button" role="button">@Confirmation.Back_To_Registrations_Button_Text</a></p>

    </div>
</div>