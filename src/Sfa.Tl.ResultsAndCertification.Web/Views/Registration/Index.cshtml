@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Registration.DashboardViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.Registration


@{
    ViewData["Title"] = @Dashboard.Page_Title;
}

@section NavigationBar {
    <vc:breadcrumb model=@Model.Breadcrumb></vc:breadcrumb>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="govuk-form-group">
            <h1 class="govuk-heading-xl">
                @Dashboard.Page_Heading
            </h1>
        </div>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
        <div class="govuk-form-group registration-card">
            <h2 class="govuk-heading-m govuk-!-padding-top-3">
                @Dashboard.Card_Heading_Upload_Registration_File
            </h2>

            <p class="govuk-body">
                <a class="govuk-link" asp-route="UploadRegistrationsFile">
                    @Dashboard.Card_Link_Upload_Registration_File
                </a>
            </p>
        </div>
    </div>

    <div class="govuk-grid-column-one-half">
        <div class="govuk-form-group registration-card">
            <h2 class="govuk-heading-m govuk-!-padding-top-3">
                @Dashboard.Card_Heading_Search_Registration
            </h2>
            <p class="govuk-body">
                <a class="govuk-link" href="search-registration">
                    @Dashboard.Card_Link_Search_Registration
                </a>
            </p>
        </div>
    </div>

    <div class="govuk-grid-column-one-half">
        <div class="govuk-form-group registration-card">
            <h2 class="govuk-heading-m govuk-!-padding-top-3">
                @Dashboard.Card_Heading_Add_One_Registration
            </h2>

            <p class="govuk-body">
                <a class="govuk-link" href="add-registration-q1-uln">
                    @Dashboard.Card_Link_Add_One_Registration
                </a>
            </p>
        </div>
    </div>
</div>
