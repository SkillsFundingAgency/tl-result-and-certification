@using Sfa.Tl.ResultsAndCertification.Web.Content.Registration
@using Sfa.Tl.ResultsAndCertification.Web.WebConfigurationHelper
@inject IWebConfigurationService ConfigurationService

@{
    ViewData["Title"] = @ProblemWithService.Page_Title;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">@ProblemWithService.Page_Heading</h1>
        <p class="govuk-body govuk-!-margin-top-7">@ProblemWithService.Submit_Your_File_Again_Text <a class="govuk-link" href="mailto: @ConfigurationService.GetTechnicalSupportEmailAddress()?subject=@ProblemWithService.Email_Subject">@ProblemWithService.Contact_Manage_TLevels_Results_Team_Text</a>.</p>
        <p class="govuk-!-margin-top-5"><a class="govuk-button" role="button" asp-route="UploadRegistrationsFile">@ProblemWithService.Upload_File_Again_Button_Text</a></p>
        <p class="govuk-!-margin-top-5"><a class="govuk-button govuk-button--secondary" role="button" asp-route="RegistrationDashboard">@ProblemWithService.Back_To_Registrations_Button_Text</a></p>
    </div>
</div>