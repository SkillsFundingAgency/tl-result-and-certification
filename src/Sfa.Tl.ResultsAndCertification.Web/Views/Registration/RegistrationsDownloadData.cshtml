@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Registration.Manual.RegistrationsDownloadViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.Registration
@using Sfa.Tl.ResultsAndCertification.Common.Helpers

@{
    ViewData["Title"] = RegistrationsDownloadData.Page_Title;
}

@section NavigationBar {
    <vc:breadcrumb model=@Model.Breadcrumb></vc:breadcrumb>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">
            @RegistrationsDownloadData.Heading_Download_Registratinos_Data
        </h1>

        <section class="govuk-clearfix">
            <div class="gem-c-attachment__thumbnail">
                <a class="govuk-link" target="_self" tabindex="-1" aria-hidden="true" asp-route="@RouteConstants.RegistrationsDownloadDataLink" asp-route-id="@Model.BlobUniqueReference">
                    <svg class="gem-c-attachment__thumbnail-image" version="1.1" viewBox="0 0 99 140" width="99" height="140" aria-hidden="true">
                        <path d="M12 12h75v27H12zM12 59h9v9h-9zM12 77h9v9h-9zM12 95h9v9h-9zM12 113h9v9h-9zM30 59h57v9H30zM30 77h39v9H30zM30 95h57v9H30zM30 113h48v9H30z" stroke-width="0"></path>
                    </svg>
                </a>
            </div>
            <div>
                <h3 class="govuk-heading-s">
                    <a class="govuk-link" target="_self" asp-route="@RouteConstants.RegistrationsDownloadDataLink" asp-route-id="@Model.BlobUniqueReference">
                        @RegistrationsDownloadData.Registrations_Report, @Model.FileSize <abbr title="bytes">@RegistrationsDownloadData.File_Size_Units</abbr>
                    </a>
                </h3>
            </div>
        </section>

        <div class="govuk-button-group govuk-!-margin-bottom-6">
            <a id="backToHomeButton" class="govuk-button" role="button" asp-route="@RouteConstants.Home">@RegistrationsDownloadData.Button_Back_To_Home</a>
        </div>
    </div>
</div>
