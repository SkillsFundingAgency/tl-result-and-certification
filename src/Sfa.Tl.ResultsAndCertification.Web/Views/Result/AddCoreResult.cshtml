@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Result.Manual.ManageCoreResultViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.Result

@{
    ViewData["Title"] = ManageCoreResult.Page_Title_Add_Result;
}

@section NavigationBar {
<vc:back-link model=Model.BackLink></vc:back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form class="form" id="addCoreResultForm" asp-route="SubmitAddCoreResult">
            <input type="hidden" asp-for="ProfileId" />
            <input type="hidden" asp-for="AssessmentId" />

            <h1 class="govuk-heading-l">@string.Format(ManageCoreResult.Page_Heading, @Model.LearnerName)</h1>

            <dl class="govuk-summary-list govuk-summary-list--no-border" aria-label="Learners details">
                <vc:summary-item model=Model.SummaryUln></vc:summary-item>
                <vc:summary-item model=Model.SummaryDateofBirth></vc:summary-item>
                <vc:summary-item model=Model.SummaryProviderName></vc:summary-item>
                <vc:summary-item model=Model.SummaryProviderUkprn></vc:summary-item>
                <vc:summary-item model=Model.SummaryTlevelTitle></vc:summary-item>
            </dl>

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                        <h2 class="govuk-fieldset__heading">
                            @string.Format(ManageCoreResult.Select_The_Grade_For, @Model.AssessmentSeries)
                        </h2>
                    </legend>
                    <div id="core-component-hint" class="govuk-hint">
                        @string.Format(ManageCoreResult.Core_Component, @Model.PathwayDisplayName)
                    </div>

                    @foreach (var grade in Model?.Grades?.Select((value, i) => (value, i)))
                    {
                        var elementId = (grade.i > 0) ? "hasgradeselected-" + grade.i : "hasgradeselected";
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="@elementId" type="radio" asp-for="@Model.SelectedGradeCode" value="@Model.Grades[grade.i].Code">
                            <label class="govuk-label govuk-radios__label" for="@elementId">
                                @grade.value.Value
                            </label>
                        </div>
                    }
                </fieldset>
            </div>

            <button type="submit" id="submitButton" class="govuk-button" data-module="govuk-button" data-prevent-double-click="true">@ManageCoreResult.Submit_Button</button>
        </form>
    </div>
</div>
