@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Result.DashboardViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.Result
@using Sfa.Tl.ResultsAndCertification.Common.Helpers
@using Sfa.Tl.ResultsAndCertification.Web.ViewModel.SearchRegistration.Enum

@{
    ViewData["Title"] = @Dashboard.Page_Title;
}

@section NavigationBar {
    <vc:breadcrumb model=@Model.Breadcrumb></vc:breadcrumb>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="govuk-form-group">
            <h1 class="govuk-heading-l">
                @Dashboard.Page_Heading
            </h1>
            <p class="govuk-body">@Dashboard.Para_Tell_Us_When_Your_Learners_Have_Achieved</p>
        </div>
    </div>
</div>

<section class="homepage-section homepage-section--services-and-info">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h2 class="gem-c-heading govuk-heading-m govuk-!-margin-bottom-6">@Dashboard.In_This_Section</h2>
            <ul class="single-column-services-and-info__list">
                <li class="chevron-card">
                    <div class="chevron-card__wrapper">
                        <h3 class="gem-c-heading govuk-heading-s govuk-!-margin-bottom-2">
                            <a class="govuk-link chevron-card__link" asp-route="@RouteConstants.UploadResultsFile">@Dashboard.Card_Heading_Link_Upload_Results</a>
                        </h3>
                        <p class="govuk-body chevron-card__description">@Dashboard.Para_Add_Or_Change_Result_For_Learners</p>
                    </div>
                </li>
                <li class="chevron-card">
                    <div class="chevron-card__wrapper">
                        <h3 class="gem-c-heading govuk-heading-s govuk-!-margin-bottom-2">
                            <a class="govuk-link chevron-card__link" asp-route="@RouteConstants.SearchRegistrationClear" asp-route-type="@SearchRegistrationType.Result">
                                @Dashboard.Card_Heading_Link_Manage_Results
                            </a>
                        </h3>
                        <p class="govuk-body chevron-card__description">@Dashboard.Para_Add_View_Or_Change_Results_For_Individual_Learners</p>
                    </div>
                </li>
                <li class="chevron-card">
                    <div class="chevron-card__wrapper">
                        <h3 class="gem-c-heading govuk-heading-s govuk-!-margin-bottom-2">
                            <a class="govuk-link chevron-card__link" asp-route="@RouteConstants.ResultsGeneratingDownload">@Dashboard.Card_Heading_Download_Results_Data</a>
                        </h3>
                        <p class="govuk-body chevron-card__description">@Dashboard.Para_Download_Result_Data_As_Csv_File</p>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</section>