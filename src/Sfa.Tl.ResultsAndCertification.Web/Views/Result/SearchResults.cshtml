@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Result.Manual.SearchResultsViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.Result
@using Sfa.Tl.ResultsAndCertification.Common.Helpers

@{
    ViewData["Title"] = @SearchResults.Page_Title;
}

@section NavigationBar {
    <vc:breadcrumb model=@Model.Breadcrumb></vc:breadcrumb>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_ValidationSummary" />
        <form asp-route="@RouteConstants.SubmitSearchResults">
            <div class="govuk-form-group">
                <h1 class="govuk-heading-xl">
                            @SearchResults.Search_For_Learner_Heading_Text
                        </h1>                   
                    <p class="govuk-body">@SearchResults.Search_Info_Text</p>
                    <div class="govuk-form-group" sfa-validation-for="SearchUln" sfa-validation-class="govuk-form-group--error">
                        <label class="govuk-label" for="searchuln">@SearchResults.Enter_Uln_Field_Text</label>
                        <span class="govuk-hint">@SearchResults.Uln_Hint_Text</span>
                        <span sfa-validation-for="SearchUln"></span>
                        <input class="govuk-input govuk-input--width-20" id="searchuln" asp-for="SearchUln" maxlength="10" inputmode="numeric" aria-required="true">
                    </div>
            </div>
            <button id="searchButton" type="submit" class="govuk-button" data-module="govuk-button" data-prevent-double-click="true">@SearchResults.Search_Button_Text</button>
        </form>
    </div>
</div>