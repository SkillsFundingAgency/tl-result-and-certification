@using Sfa.Tl.ResultsAndCertification.Web.Content.Result
@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Result.UploadSuccessfulViewModel

@{
    ViewData["Title"] = @UploadSuccessful.Page_Title;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">@UploadSuccessful.Section_Heading</h1>
        </div>
        <p class="govuk-body govuk-!-padding-top-3">@Model.SuccessfulResultText</p>

        <h2 class="govuk-heading-m">@UploadSuccessful.What_Happens_Next</h2>

        <p class="govuk-body">@UploadSuccessful.Para_You_Can_Now</p>

        <ul class="govuk-list govuk-list--bullet">
            <li><a class="govuk-link" asp-route="SearchResults">@UploadSuccessful.Manage_Individual_Results</a>@UploadSuccessful.By_Searching_For_A_Learner</li>
            <li><a class="govuk-link" asp-route="UploadResultsFile">@UploadSuccessful.Upload_Another_Multiple_Results_File</a></li>
            <li>@UploadSuccessful.Register_An<a class="govuk-link" asp-route="StartReviewsAndAppeals">@UploadSuccessful.Appeal</a></li>
        </ul>

        <div class="govuk-button-group">
            <a id="uploadAnotherFileButton" class="govuk-button" role="button" asp-route="UploadResultsFile">@UploadSuccessful.Upload_Another_File_Button</a>
            <a id="backToHomeButton" class="govuk-button govuk-button--secondary" role="button" data-module="govuk-button" asp-route="Home">@UploadSuccessful.Back_To_Home_Button</a>
        </div>
    </div>
</div>