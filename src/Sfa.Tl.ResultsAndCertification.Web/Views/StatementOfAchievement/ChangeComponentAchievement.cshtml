@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.StatementOfAchievement.ChangeComponentAchievementsViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.StatementOfAchievement

@{
    ViewData["Title"] = ChangeComponentAchievements.Page_Title;
}

@section NavigationBar {
    <vc:back-link model=Model.BackLink></vc:back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-xl">@ChangeComponentAchievements.Caption_Request_Statement_Of_Achievement</span>
        <h1 class="govuk-heading-l">@ChangeComponentAchievements.Heading_Change_Component_Achievements</h1>
        <p class="govuk-body">@ChangeComponentAchievements.Para_You_Need_To_Update_Learner_Details</p>
        <p class="govuk-body">@ChangeComponentAchievements.Para_Come_Back_To_Request_Soa</p>
        <p class="govuk-body">
            <a id="manageTlevelRecordButton" class="govuk-button govuk-!-margin-top-6" role="button" asp-route="LearnerRecordDetails" asp-route-profileId="@Model.ProfileId">
                @ChangeComponentAchievements.Button_Manage_Tlevel_Record
            </a>
        </p>
    </div>
</div>