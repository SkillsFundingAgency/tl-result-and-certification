@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.StatementOfAchievement.RequestSoaNotAvailableNoIpStatusViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.StatementOfAchievement

@{
    ViewData["Title"] = RequestSoaNotAvailableNoIpStatus.Page_Title;
}

@section NavigationBar {
    <vc:breadcrumb model=@Model.Breadcrumb></vc:breadcrumb>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">

        <h1 class="govuk-heading-l">@RequestSoaNotAvailableNoIpStatus.Heading_Statement_Of_Achievement_Not_Available</h1>

        <div class="govuk-inset-text">
            <p class="govuk-body">@RequestSoaNotAvailableNoIpStatus.No_Industry_Placement_Status_Has_Been_Recorded</p>
            <p class="govuk-body">@RequestSoaNotAvailableNoIpStatus.You_Must_Add_Learner_Tlevel_Record</p>
        </div>

        <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-7 govuk-!-margin-top-7">

        <dl class="govuk-summary-list govuk-summary-list--no-border">
            <vc:summary-item model=Model.SummaryUln></vc:summary-item>
            <vc:summary-item model=Model.SummaryLearnerName></vc:summary-item>
            <vc:summary-item model=Model.SummaryDateofBirth></vc:summary-item>
            <vc:summary-item model=Model.SummaryProvider></vc:summary-item>
            <vc:summary-item model=Model.SummaryTlevelTitle></vc:summary-item>
        </dl>

        <p class="govuk-body">
            <a id="addLearnerTlevelRecordButton" class="govuk-button" role="button" asp-route="SearchLearnerRecord">@RequestSoaNotAvailableNoIpStatus.Add_Learner_Tlevel_Record_Button</a>
        </p>
    </div>
</div>