@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.StatementOfAchievement.RequestSoaUlnNotWithdrawnViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.StatementOfAchievement

@{
    ViewData["Title"] = RequestSoaUlnNotWithdrawn.Page_Title;
}

@section NavigationBar {
    <vc:back-link model=Model.BackLink></vc:back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">

        <h1 class="govuk-heading-l">@RequestSoaUlnNotWithdrawn.Heading_Learner_Has_Not_Been_Withdrawn</h1>

        <div class="govuk-inset-text">
            <p class="govuk-body">
                @RequestSoaUlnNotWithdrawn.This_Learners_Registration_Is_Still_Active
            </p>
            <p class="govuk-body">
                @RequestSoaUlnNotWithdrawn.After_The_Exam_Board_Has_Updated_The_Learners_Registration
            </p>

        </div>

        <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-7 govuk-!-margin-top-7">

        <dl class="govuk-summary-list govuk-summary-list--no-border">
            <vc:summary-item model=Model.SummaryUln></vc:summary-item>
            <vc:summary-item model=Model.SummaryLearnerName></vc:summary-item>
            <vc:summary-item model=Model.SummaryDateofBirth></vc:summary-item>
            <vc:summary-item model=Model.SummaryProvider></vc:summary-item>
            <vc:summary-item model=Model.SummaryTlevelTitle></vc:summary-item>
        </dl>

        <p class="govuk-body">
            <a id="backButton" class="govuk-button" role="button" asp-route="Home">@RequestSoaUlnNotWithdrawn.Back_To_Home</a>
        </p>
    </div>
</div>