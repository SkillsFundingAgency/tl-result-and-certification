@using Sfa.Tl.ResultsAndCertification.Web.Content.Tlevel
@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.TlevelConfirmationViewModel

@{
    ViewData["Title"] = Model.IsQueried ? Confirmation.Queried_Page_Title : @Confirmation.Page_Title;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">@Model?.TlevelConfirmationText</h1>
            <div class="govuk-panel__body">@Model?.TlevelTitle</div>
        </div>

        @if (Model.IsQueried)
        {
            <p class="govuk-body">@Confirmation.Queried_Info_Text</p>
        }

        @*<p class="govuk-body govuk-!-padding-bottom-4">@(Model.ShowMoreTlevelsToReview ? @Confirmation.More_Tlevels_Text : @Confirmation.Finished_Reviewing_All_Tlevels_Text)</p>*@

        @if (Model.ShowMoreTlevelsToReview)
        {
            <p class="govuk-body">@Confirmation.Para_You_Can_Still_Query_This_Tlevel_Details</p>

            <p class="govuk-body govuk-!-padding-bottom-4">@Confirmation.Para_You_Have_More_Tlevels_To_Review</p>

            <div class="govuk-button-group">
                <a id="reviewAnotherTlevelButton" class="govuk-button" role="button" asp-route="ReviewTlevels">@Confirmation.Button_Review_Another_Tlevel</a>
                <a id="backToHomeButton" class="govuk-button govuk-button--secondary" role="button" data-module="govuk-button" asp-route="Home">@Confirmation.Button_Back_To_Home</a>
            </div>
        }
        else
        {
            <a class="govuk-button" asp-route="YourTlevels">@Confirmation.View_Your_Tlevels_Button_Text</a>
        }
    </div>
</div>