@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Tlevels.TlevelQuerySentViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.Tlevel

@{
    ViewData["Title"] = TlevelQuerySent.Page_Title;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">@TlevelQuerySent.Heading_Tlevel_Queried</h1>
            <div class="govuk-panel__body">@Model.TlevelTitle</div>
        </div>

        <h2 class="govuk-heading-m">@TlevelQuerySent.Heading_What_Happens_Now</h2>
        <ul class="govuk-list govuk-list--bullet">
            <li>@TlevelQuerySent.Para_We_Will_Send_Reference_Number</li>
            <li>@TlevelQuerySent.Para_We_Will_Contact_You_3Days</li>
        </ul>
        <p class="govuk-body">@TlevelQuerySent.Para_If_Not_Heard_Contact_Us</p>

        <div class="govuk-button-group">
            <a id="tlevelsButton" class="govuk-button" role="button" asp-route="TlevelsDashboard">@TlevelQuerySent.Button_Back_To_Tlevels</a>
            <a id="homeButton" class="govuk-button govuk-button--secondary" role="button" asp-route="Home">@TlevelQuerySent.Button_Back_To_Home</a>
        </div>
    </div>
</div>
