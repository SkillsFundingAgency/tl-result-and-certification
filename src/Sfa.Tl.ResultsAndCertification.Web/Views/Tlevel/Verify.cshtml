@using Sfa.Tl.ResultsAndCertification.Web.Content.Tlevel
@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.ConfirmTlevelViewModel

@{
    ViewData["Title"] = @Verify.Page_Title;
}

<form asp-route="ConfirmTlevel">
    <input type="hidden" asp-for="TqAwardingOrganisationId" />
    <input type="hidden" asp-for="PathwayId" />
    <input type="hidden" asp-for="PathwayStatusId" />
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <partial name="_ValidationSummary" />

            <h1 class="govuk-heading-xl">@Verify.Section_Heading</h1>
            <p class="govuk-heading-m">@Verify.Verify_Text</p>

            <dl class="govuk-summary-list govuk-!-margin-bottom-7">
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        @Verify.Core_Field_Label
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model?.PathwayName
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        @Verify.Specialisms_Field_Label
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @foreach (var splsm in Model?.Specialisms)
                        {
                            <p class="govuk-body">@splsm</p>
                        }
                    </dd>
                </div>
            </dl>

            <div class="govuk-form-group govuk-!-margin-bottom-7" sfa-validation-for="IsEverythingCorrect" sfa-validation-class="govuk-form-group--error">
                <fieldset class="govuk-fieldset">
                    <legend><span class="govuk-visually-hidden">@Verify.Section_Heading</span></legend>
                    <div class="govuk-radios">
                        <span sfa-validation-for="IsEverythingCorrect"></span>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="iseverythingcorrect" asp-for="IsEverythingCorrect" type="radio" value="true">
                            <label class="govuk-label govuk-radios__label" for="iseverythingcorrect">
                                @Verify.Yes_Radio_Button_Text
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="tl-verify-no" asp-for="IsEverythingCorrect" type="radio" value="false">
                            <label class="govuk-label govuk-radios__label" for="tl-verify-no">
                                @Verify.No_Radio_Button_Text
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <button id="tl-verify-continue" type="submit" class="govuk-button">@Verify.Continue_Button_Text</button>
        </div>
    </div>
</form>
