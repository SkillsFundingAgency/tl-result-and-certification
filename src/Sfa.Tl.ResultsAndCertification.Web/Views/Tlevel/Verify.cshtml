@using Sfa.Tl.ResultsAndCertification.Web.Content.Tlevel
@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.ConfirmTlevelViewModel

@{
    ViewData["Title"] = @Verify.Page_Title;
}

@section NavigationBar
{
    <vc:back-link model=Model.BackLink></vc:back-link>
}

<form asp-route="ConfirmTlevel">
    <input type="hidden" asp-for="TqAwardingOrganisationId" />
    <input type="hidden" asp-for="PathwayId" />
    <input type="hidden" asp-for="PathwayStatusId" />
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <partial name="_ValidationSummary" />

            <h1 class="govuk-heading-l">@Verify.Page_Heading</h1>
            <p class="govuk-body">@Verify.Para_These_Details_Will_Be_Printed_On_Learners_Certificate</p>

            <dl class="govuk-summary-list govuk-!-margin-bottom-9 govuk-!-margin-top-7 govuk-summary-list--no-border">
                <vc:summary-item model=Model.SummaryTlevelTitle></vc:summary-item>
                <vc:summary-item model=Model.SummaryCore></vc:summary-item>
                <vc:summary-list model=Model.SummarySpecialisms></vc:summary-list>
            </dl>

            <div class="govuk-form-group govuk-!-margin-bottom-7" sfa-validation-for="IsEverythingCorrect" sfa-validation-class="govuk-form-group--error">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m" for="IsEverythingCorrect">
                        <h2 class="govuk-fieldset__heading">
                            @Verify.Section_Heading
                        </h2>
                    </legend>
                    
                    <div class="govuk-radios">
                        <span sfa-validation-for="IsEverythingCorrect"></span>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="iseverythingcorrect" asp-for="IsEverythingCorrect" type="radio" value="true">
                            <label class="govuk-label govuk-radios__label" for="iseverythingcorrect">
                                @Verify.Yes_Radio_Button_Text
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="tl-verify-no" asp-for="IsEverythingCorrect" type="radio" value="false">
                            <label class="govuk-label govuk-radios__label" for="tl-verify-no">
                                @Verify.No_Radio_Button_Text
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <button id="tl-verify-continue" type="submit" class="govuk-button" data-module="govuk-button" data-prevent-double-click="true">@Verify.Continue_Button_Text</button>
        </div>
    </div>
</form>
