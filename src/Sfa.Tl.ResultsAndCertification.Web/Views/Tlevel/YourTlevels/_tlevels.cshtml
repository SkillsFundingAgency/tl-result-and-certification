@using Sfa.Tl.ResultsAndCertification.Web.Content.Tlevel
@model IEnumerable<Sfa.Tl.ResultsAndCertification.Web.ViewModel.Tlevels.YourTlevelViewModel>

<dl class="govuk-summary-list govuk-!-margin-bottom-7">

    @foreach (var tlevel in Model)
    {
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__value">
                @tlevel.TlevelTitle
            </dt>
            <dd class="govuk-summary-list__actions">
                <a class="govuk-link" asp-route="TlevelConfirmedDetails" asp-route-id="@tlevel.PathwayId">
                    @ViewAll.View_Link_Text<span class="govuk-visually-hidden"> @tlevel.TlevelTitle</span>
                </a>
            </dd>
        </div>
    }

</dl>