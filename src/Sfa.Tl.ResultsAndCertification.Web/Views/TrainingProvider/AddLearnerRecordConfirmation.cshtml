@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.TrainingProvider.Manual.LearnerRecordConfirmationViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.TrainingProvider

@{
    ViewData["Title"] = LearnerRecordConfirmation.Page_Title;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">@LearnerRecordConfirmation.Learner_TLevel_Record_Added_Successful_Text</h1>
            <div class="govuk-panel__body">
                @Model.Name<br />
                @LearnerRecordConfirmation.Uln_Text: @Model.Uln
            </div>
        </div>

        <p class="govuk-!-margin-top-8"><a id="addAnotherLearnerRecordButton" class="govuk-button" role="button" asp-route="EnterUniqueLearnerNumber">@LearnerRecordConfirmation.Add_Another_Learner_TLevel_Record_Button_Text</a></p>
        <p class="govuk-body"><a id="backToManageLearnerRecordsLink" class="govuk-link" asp-route="ManageLearnerRecordsDashboard">@LearnerRecordConfirmation.Back_To_Manage_Learner_Records_Link_Text</a></p>
    </div>
</div>