@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.TrainingProvider.Manual.AddMathsStatusViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.TrainingProvider
@using Sfa.Tl.ResultsAndCertification.Common.Helpers

@{
    ViewData["Title"] = AddMathsStatus.Page_Title;
}

@section NavigationBar {
<vc:back-link model=Model.BackLink></vc:back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-route="">
            <input type="hidden" asp-for="ProfileId" />

            <partial name="_ValidationSummary" />

            <div class="govuk-form-group" sfa-validation-for="IsAchieved" sfa-validation-class="govuk-form-group--error">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-fieldset__heading">@AddMathsStatus.Heading_Has_Learner_Achieved_Level2_Or_Equivalent</h1>
                    </legend>
                    <div class="govuk-radios govuk-radios--inline" data-module="govuk-radios">
                        <span sfa-validation-for="IsAchieved"></span>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="isachieved" asp-for="IsAchieved" type="radio" value="true">
                            <label class="govuk-label govuk-radios__label" for="isachieved">
                                @AddMathsStatus.Option_Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="isachieved-no" asp-for="IsAchieved" type="radio" value="false">
                            <label class="govuk-label govuk-radios__label" for="isachieved-no">
                                @AddMathsStatus.Option_No
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <button id="continueButton" class="govuk-button" data-module="govuk-button" data-prevent-double-click="true">@AddMathsStatus.Button_Continue</button>
        </form>
    </div>
</div>