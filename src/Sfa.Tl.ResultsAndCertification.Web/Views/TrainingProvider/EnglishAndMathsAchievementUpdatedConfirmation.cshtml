@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.TrainingProvider.Manual.UpdateLearnerRecordResponseViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.TrainingProvider

@{
    ViewData["Title"] = EnglishAndMathsAchievementUpdatedConfirmation.Page_Title;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">@EnglishAndMathsAchievementUpdatedConfirmation.English_And_Maths_Achievement_Updated_Successful_Text</h1>
            <div class="govuk-panel__body">
                @Model.Name<br />
                @string.Format(@EnglishAndMathsAchievementUpdatedConfirmation.Uln_Text, @Model.Uln)
            </div>
        </div>

        <p class="govuk-!-margin-top-8"><a id="backToLearnerTLevelRecordButton" class="govuk-button" role="button" asp-route="LearnerRecordDetails" asp-route-profileId="@Model.ProfileId">@EnglishAndMathsAchievementUpdatedConfirmation.Back_To_Learner_TLevel_Record_Text</a></p>
        <p class="govuk-body"><a id="backToManageLearnerRecordsLink" class="govuk-link" asp-route="ManageLearnerRecordsDashboard">@EnglishAndMathsAchievementUpdatedConfirmation.Back_To_Manage_Learner_Records_Link_Text</a></p>
    </div>
</div>