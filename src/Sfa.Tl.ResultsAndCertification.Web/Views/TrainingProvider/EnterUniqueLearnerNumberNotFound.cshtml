@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.TrainingProvider.Manual.LearnerRecordNotFoundViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.TrainingProvider

@{
    ViewData["Title"] = EnterUniqueLearnerReferenceNotFound.Page_Title;
}

@section NavigationBar {
    <vc:back-link model=Model.BackLink></vc:back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">
            @string.Format(@EnterUniqueLearnerReferenceNotFound.Heading_Uln_Not_Registered, @Model.Uln)
        </h1>
        <p class="govuk-body">
            @EnterUniqueLearnerReferenceNotFound.Para_You_Can_Only_Update_Registered_Learners
        </p>
        <p class="govuk-body">
            @EnterUniqueLearnerReferenceNotFound.Para_Please_Contact_ExamBoard
        </p>
        <p>
            <a id="backButton" class="govuk-button govuk-!-margin-top-6" role="button" asp-route="@Model.BackLink.RouteName">@EnterUniqueLearnerReferenceNotFound.Button_Back_To_Search</a>
        </p>
        <p class="govuk-body">
            <a id="backToManageLearnerLink" asp-route="ManageLearnerRecordsDashboard">@EnterUniqueLearnerReferenceNotFound.Link_Back_To_Manage_Learner</a>
        </p>
    </div>
</div>