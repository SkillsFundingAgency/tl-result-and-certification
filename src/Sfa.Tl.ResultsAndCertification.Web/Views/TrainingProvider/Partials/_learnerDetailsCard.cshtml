@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.TrainingProvider.Manual.SearchLearnerDetailsViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.TrainingProvider
@using Sfa.Tl.ResultsAndCertification.Common.Helpers

<div class="govuk-summary-list__row">
    <div class="govuk-grid-row govuk-padding-1">
        <div class="govuk-grid-column-two-thirds">
            <dt class="govuk-summary-list__key govuk-grid-column-full">
                <h3 class="govuk-heading-m govuk-!-margin-bottom-0">
                    <a asp-route="@RouteConstants.LearnerRecordDetails" asp-route-profileId="@Model.ProfileId" class="govuk-link">@Model.LearnerName</a>
                </h3>
            </dt>
            <dd class="govuk-summary-list__value govuk-grid-column-full">
                <p class="govuk-body-m">@Model.Uln</p>
                <p class="govuk-body-s">
                    <span class="govuk-visually-hidden">@SearchLearnerDetails.Hidden_Text_Course</span>
                    @Model.TlevelName
                </p>
                <p class="govuk-body-s">
                    @SearchLearnerDetails.Start_Year_Text<span>@Model.StartYear</span>
                </p>
            </dd>
        </div>
        <div class="govuk-grid-column-one-third">
            <dd class="govuk-summary-list__actions">
                @if (!Model.IsStatusCompleted)
                {
                    <strong class="govuk-tag govuk-tag--red govuk-!-margin-bottom-1 tl-letter-spacing-0">@LearnerRecordDetails.Status_Tag_Incomplete</strong>

                    <ul class="govuk-body-s govuk-list">

                        @if (!Model.IsIndustryPlacementAdded)
                        {
                            <li><a class="govuk-link" asp-route="@RouteConstants.AddIndustryPlacement" asp-route-profileId="@Model.ProfileId">@SearchLearnerDetails.Link_Add_Ip</a></li>
                        }

                        @if (!Model.IsMathsAdded)
                        {
                            <li><a class="govuk-link" asp-route="@RouteConstants.AddMathsStatus" asp-route-profileId="@Model.ProfileId">@SearchLearnerDetails.Link_Add_Maths</a></li>
                        }

                        @if (!Model.IsEnglishAdded)
                        {
                            <li><a class="govuk-link" asp-route="@RouteConstants.AddEnglishStatus" asp-route-profileId="@Model.ProfileId">@SearchLearnerDetails.Link_Add_English</a></li>
                        }
                    </ul>
                }
            </dd>
        </div>
    </div>
</div>
