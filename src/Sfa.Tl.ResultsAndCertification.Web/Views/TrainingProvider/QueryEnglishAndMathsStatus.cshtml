@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.TrainingProvider.Manual.QueryEnglishAndMathsViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.TrainingProvider

@{
    ViewData["Title"] = QueryEnglishAndMathsStatus.Page_Title;
}

@section NavigationBar {
    <vc:back-link model=Model.BackLink></vc:back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">
            @QueryEnglishAndMathsStatus.Heading_Query_English_And_Maths
        </h1>
        <span id="uln-hint" class="govuk-hint">
            <strong>@QueryEnglishAndMathsStatus.Hint_Text_Learner_Name</strong> @Model.Name
        </span>
        <p class="govuk-body govuk-!-margin-top-7">
            @QueryEnglishAndMathsStatus.Para_If_You_Think_LRS_Wrong
        </p>
        <p>
            <a id="backButton" class="govuk-button govuk-!-margin-top-6" role="button" asp-route="LearnerRecordDetails" asp-route-profileId="@Model.ProfileId" >@QueryEnglishAndMathsStatus.Button_Back_To_Learner_Record</a>
        </p>
    </div>
</div>