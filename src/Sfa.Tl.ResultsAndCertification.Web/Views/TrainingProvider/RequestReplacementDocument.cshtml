<div class="govuk-grid-row govuk-!-margin-top-4 govuk-!-margin-bottom-9">
    <div class="govuk-grid-column-two-thirds">
        <form asp-route="@RouteConstants.SubmitRequestReplacementDocument">
            <input type="hidden" asp-for="ProfileId" value="@Model.ProfileId" />
            <input type="hidden" asp-for="Uln" value="@Model.Uln" />
            <input type="hidden" asp-for="PrintCertificateId" value="@Model.PrintCertificateId" />
            <input type="hidden" asp-for="ProviderAddress.AddressId" value="@Model.ProviderAddress.AddressId" />

            <dl class="govuk-summary-list govuk-!-margin-bottom-9">
                <vc:summary-item model=Model.SummaryDocumentRequested></vc:summary-item>
            </dl>

            <div class="record-header">
                <h2 class="govuk-heading-xl govuk-!-margin-bottom-0">@Model.LearnerName</h2>
                <span class="govuk-caption-xl">@RequestReplacementDocument.Title_Learner_Name @Model.LearnerName</span>
            </div>

            <div class="record-header">
                <h2 class="govuk-heading-xl govuk-!-margin-bottom-0">@Model.LearnerName</h2>
                <span class="govuk-caption-xl">@RequestReplacementDocument.Uln_Text @Model.Uln</span>
            </div>



            @* <div>
            <h2 class="govuk-heading-m govuk-!-display-inline">@RequestReplacementDocument.Your_Org_Postal_Address</h2>
            <a class="govuk-body govuk-link float--right" asp-route="@RouteConstants.AddAddressPostcode">
            @RequestReplacementDocument.Link_Change
            <span class="govuk-visually-hidden">@RequestReplacementDocument.Hidden_Text_Change_Organisation_Address</span>
            </a>
            </div>*@

            @*  <p class="govuk-body">@RequestReplacementDocument.Changing_Address_Take_Back_To_Home_Page</p>*@

            <dl class="govuk-summary-list govuk-!-margin-bottom-9">
                <vc:summary-item model=Model.SummaryDepartment></vc:summary-item>
                <vc:summary-item model=Model.SummaryOrganisationAddress></vc:summary-item>
            </dl>

            @* <h2 class="govuk-heading-m">@RequestReplacementDocument.Now_Send_Your_Request</h2>*@
           @* <p class="govuk-body">@RequestReplacementDocument.By_Submitting_Request_You_Are_Confirming</p>*@

            <details class="govuk-details govuk-!-margin-left-4" data-module="govuk-details">
                <summary class="govuk-details__summary">
                    <span class="govuk-details__summary-text">
                        @RequestReplacementDocument.Organisation_Address_Wrong
                    </span>
                </summary>
                <div class="govuk-details__text">
                    <p class="govuk-!-padding-right-2">@RequestReplacementDocument.Organisation_Address_Wrong_Message</p>
                </div>
            </details>

            <button type="submit" class="govuk-button govuk-!-display-block" name="certificateStatus" data-module="govuk-button" data-prevent-double-click="true">@RequestReplacementDocument.Button_Send_Request</button>
            <a asp-route="@RouteConstants.LearnerRecordDetails" asp-route-profileId="@Model.ProfileId" class="govuk-link">@RequestReplacementDocument.Link_Cancel</a>
        </form>
    </div>
</div>